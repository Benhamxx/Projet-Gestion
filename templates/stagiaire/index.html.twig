<div class="example-wrapper">
    <h1>Liste des stagiaires</h1>
    <table>
        <tr>
            <td>Nom</td>
            <td>Prenom</td>
            <td>Sexe</td>
            <td>Date de Naissance</td>
            <td>Ville</td>
            <td>Mail</td>
            <td>Téléphone</td>
        </tr>
        {% for stagiaire in stagiaires %}
        <tr>
            <th>
                <a href="{{path('fiche_stagiaire', {'id':stagiaire.id}) }}">{{stagiaire.nom}}</a>
            </th>
            <th>{{stagiaire.prenom}}</th>
            <th>{{stagiaire.sexe}}</th>
            <th>{{stagiaire.dateNaissance |date("d/m/y")}}</th>
            <th>{{stagiaire.ville}}</th>
            <th>{{stagiaire.mail}}</th>
            <th>{{stagiaire.telephone}}</th>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}