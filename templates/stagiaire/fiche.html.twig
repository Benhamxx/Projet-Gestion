{% extends 'base.html.twig' %} {% block title %}Hello StagiaireController!{% endblock %} {% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h2>Fiche stagiaire</h2>
    <h3><img src="{{ asset('img/dino.jpg') }}" width="50px" height="50px">{{stagiaire.nom ~ ' ' ~ stagiaire.prenom}}</h3>
    <table>
        <tr>
            <th>Sexe :</th>
            <td>{{stagiaire.sexe}}</td>
        </tr>
        <tr>
            <th>Date de naissance :</th>
            <td>{{stagiaire.dateNaissance |date("d/m/y")}}</td>
        </tr>
        <tr>
            <th>Ville :</th>
            <td>{{stagiaire.ville}}</td>
        </tr>
        <tr>
            <th>Mail :</th>
            <td>{{stagiaire.mail}}</td>
        </tr>
        <tr>
            <th>Telephone :</th>
            <td>{{stagiaire.telephone}}</td>
        </tr>

    </table>

    <h3>Sessions pr√©vues</h3>
    <table>
        {% for session in stagiaire.sessions %}
        <tr>
            <th>{{session.nomSession ~' '~ 'du ' ~ session.dateDebut |date("d/m/y") ~' '~ 'au ' ~ session.dateFin |date("d/m/y") }}</th>
        </tr>
        {% endfor %}
    </table>




</div>
{% endblock %}